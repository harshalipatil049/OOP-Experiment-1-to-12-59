a):-
#include <iostream>
using namespace std;

class Number {
    int num;

public:
    void accept() {
        cout << "Enter number: ";
        cin >> num;
    }

    void display() {
        cout << num << endl;
    }

    void swap(Number &obj) {
        int temp = this->num;
        this->num = obj.num;
        obj.num = temp;
    }
};

int main() {
    Number n1, n2;

    cout << "Enter first number:\n";
    n1.accept();
    cout << "Enter second number:\n";
    n2.accept();

    cout << "\nBefore Swapping:\n";
    cout << "n1 = "; n1.display();
    cout << "n2 = "; n2.display();

    n1.swap(n2);

    cout << "\nAfter Swapping:\n";
    cout << "n1 = "; n1.display();
    cout << "n2 = "; n2.display();

    return 0;
}

b):-
#include <iostream>
using namespace std;

class Number {
    int num;

public:
    void accept() {
        cout << "Enter number: ";
        cin >> num;
    }

    void display() {
        cout << num << endl;
    }
    friend void swapNumbers(Number &n1, Number &n2);
};
void swapNumbers(Number &n1, Number &n2) {
    int temp = n1.num;
    n1.num = n2.num;
    n2.num = temp;
}

int main() {
    Number n1, n2;

    cout << "Enter first number:\n";
    n1.accept();
    cout << "Enter second number:\n";
    n2.accept();

    cout << "\nBefore Swapping:\n";
    cout << "n1 = "; n1.display();
    cout << "n2 = "; n2.display();

    swapNumbers(n1, n2);

    cout << "\nAfter Swapping:\n";
    cout << "n1 = "; n1.display();
    cout << "n2 = "; n2.display();

    return 0;
}

c):-
#include <iostream>
using namespace std;

class B;

class A {
    int numA;
public:
    void accept() {
        cout << "Enter number for class A: ";
        cin >> numA;
    }
    void display() {
        cout << "A = " << numA << endl;
    }
    friend void swapNumbers(A &x, B &y);
};

class B {
    int numB;
public:
    void accept() {
        cout << "Enter number for class B: ";
        cin >> numB;
    }
    void display() {
        cout << "B = " << numB << endl;
    }
    friend void swapNumbers(A &x, B &y);
};

void swapNumbers(A &x, B &y) {
    int temp = x.numA;
    x.numA = y.numB;
    y.numB = temp;
}

int main() {
    A a;
    B b;
    a.accept();
    b.accept();
    cout << "\nBefore Swapping:\n";
    a.display();
    b.display();
    swapNumbers(a, b);
    cout << "\nAfter Swapping:\n";
    a.display();
    b.display();
    return 0;
}

 d) Passing object as function argument
#include <iostream>
using namespace std;

class Result2;

class Result1 {
    float marks1;
public:
    void accept() {
        cout << "Enter marks for Result1: ";
        cin >> marks1;
    }
    friend void average(Result1 r1, Result2 r2);
};

class Result2 {
    float marks2;
public:
    void accept() {
        cout << "Enter marks for Result2: ";
        cin >> marks2;
    }
    friend void average(Result1 r1, Result2 r2);
};

void average(Result1 r1, Result2 r2) {
    float avg = (r1.marks1 + r2.marks2) / 2;
    cout << "\nAverage Marks: " << avg << endl;
}

int main() {
    Result1 r1;
    Result2 r2;
    r1.accept();
    r2.accept();
    average(r1, r2);
    return 0;
}

e) Greatest number among two numbers from two different classes using friend function
#include <iostream>
using namespace std;

class B;

class A {
    int numA;
public:
    void accept() {
        cout << "Enter number for class A: ";
        cin >> numA;
    }
    friend void greatest(A x, B y);
};

class B {
    int numB;
public:
    void accept() {
        cout << "Enter number for class B: ";
        cin >> numB;
    }
    friend void greatest(A x, B y);
};

void greatest(A x, B y) {
    if (x.numA > y.numB)
        cout << "\nGreatest number is: " << x.numA << endl;
    else if (y.numB > x.numA)
        cout << "\nGreatest number is: " << y.numB << endl;
    else
        cout << "\nBoth numbers are equal." << endl;
}

int main() {
    A a;
    B b;
    a.accept();
    b.accept();
    greatest(a, b);
    return 0;
}

