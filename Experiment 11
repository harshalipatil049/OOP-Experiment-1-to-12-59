 a)Using Iterators
#include <iostream>
#include <vector>
using namespace std;

int main() {
    vector<int> v = {10, 20, 30, 40, 50};
    int pos, newVal, scalar;

    cout << "Original Vector: ";
    for (auto it = v.begin(); it != v.end(); ++it)
        cout << *it << " ";
    cout << endl;

    cout << "Enter position to modify (0-" << v.size() - 1 << "): ";
    cin >> pos;
    cout << "Enter new value: ";
    cin >> newVal;
    if (pos >= 0 && pos < v.size()) {
        vector<int>::iterator it = v.begin() + pos;
        *it = newVal;
    }

    cout << "Enter scalar value to multiply: ";
    cin >> scalar;
    for (auto it = v.begin(); it != v.end(); ++it)
        *it = (*it) * scalar;

    cout << "Vector after operations: (";
    for (auto it = v.begin(); it != v.end(); ++it) {
        cout << *it;
        if (it + 1 != v.end()) cout << ",";
    }
    cout << ")" << endl;

    return 0;
}

 b)Without Iterators
#include <iostream>
#include <vector>
using namespace std;

int main() {
    vector<int> v = {10, 20, 30, 40, 50};
    int pos, newVal, scalar;

    cout << "Original Vector: ";
    for (int i = 0; i < v.size(); i++)
        cout << v[i] << " ";
    cout << endl;

    cout << "Enter position to modify (0-" << v.size() - 1 << "): ";
    cin >> pos;
    cout << "Enter new value: ";
    cin >> newVal;
    if (pos >= 0 && pos < v.size())
        v[pos] = newVal;

    cout << "Enter scalar value to multiply: ";
    cin >> scalar;
    for (int i = 0; i < v.size(); i++)
        v[i] *= scalar;

    cout << "Vector after operations: (";
    for (int i = 0; i < v.size(); i++) {
        cout << v[i];
        if (i < v.size() - 1) cout << ",";
    }
    cout << ")" << endl;

    return 0;
}

